dir=$1; lxcConf=$2; fstab=$3;
if [ @dev@ ]; then
    @coreutils@/bin/mkdir -p $dir/rootfs/dev
fi
if [ @proc@ ]; then
    @coreutils@/bin/mkdir -p $dir/rootfs/proc
    printf 'proc %s/rootfs/proc proc nosuid,nodev,noexec 0 0\n' $dir >> $fstab
fi
if [ @sysfs@ ]; then
    @coreutils@/bin/mkdir -p $dir/rootfs/sys
    printf 'sysfs %s/rootfs/sys sysfs nosuid,nodev,noexec 0 0\n' $dir >> $fstab
fi
