#! @shell@

base=/var/lib/lxc
dir=$base/@name@
gcbase=@gcbase@
gcdir=$gcbase/tsp/@name@

@stop@

@libvirt@/bin/virsh -c lxc:/// undefine @name@

@coreutils@/bin/rm -f $dir/config.xml $dir/fstab $dir/creator $dir/sterilise
@coreutils@/bin/rm -rf $dir/rootfs/nix $gcdir

for f in @onSterilise@; do
    $f $dir
done
